{% extends 'asistencia/base.html' %} {% block title %} {% if form.instance.pk
%}Editar Solicitud{% else %}Nueva Solicitud{% endif %} - Taller 2 Django {%
endblock %} {% block content %}
<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h3 class="mb-0">
          {% if form.instance.pk %}Editar Solicitud{% else %}Nueva Solicitud{%
          endif %}
        </h3>
      </div>
      <div class="card-body">
        <form method="post" enctype="multipart/form-data">
          {% csrf_token %} {% for field in form %}
          <div class="mb-3">
            {{ field.label_tag }} {{ field }} {% for err in field.errors %}
            <div class="text-danger small">{{ err }}</div>
            {% endfor %}
          </div>
          {% endfor %}

          <div class="d-flex justify-content-between">
            <a
              href="{% url 'solicitudes:solicitud_list' %}"
              class="btn btn-secondary"
              >Cancelar</a
            >
            <button type="submit" class="btn btn-primary">
              {% if form.instance.pk %}Actualizar{% else %}Crear{% endif %}
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

{% endblock %}
